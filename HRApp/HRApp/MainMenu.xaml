<UserControl x:Class="HRApp.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="270.189">
    <Grid Background="#FF89E3FF" Margin="0,0,0,-0.4" HorizontalAlignment="Left" Width="270">
        <StackPanel HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" VerticalAlignment="Top" Width="250">
            <Label x:Name="lblAddEmployee" Content="Add Employee" BorderBrush="Black"/>
            <Label x:Name="lblEditEmployee" Content="Edit Employee" BorderBrush="Black"/>
            <Label x:Name="lblViewAllEmployee" Content="View All Employees" BorderBrush="Black" Background="{x:Null}"/>
        </StackPanel>
    </Grid>
</UserControl>
